<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/alexandria/db" VERSION="20120122" COMMENT="XMLDB file for Moodle local/alexandria"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd">
    <TABLES>
        <TABLE NAME="data_abuse_reports" COMMENT="to data abuse reports">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" ENUM="false" NEXT="recordid"/>
                <FIELD NAME="recordid" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" ENUM="false"
                       PREVIOUS="id" NEXT="abusetopic"/>
                <FIELD NAME="abusetopic" TYPE="char" LENGTH="20" NOTNULL="true" SEQUENCE="false" ENUM="false" PREVIOUS="recordid"
                       NEXT="report_author"/>
                <FIELD NAME="report_author" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" ENUM="false"
                       PREVIOUS="abusetopic" NEXT="abusedescription"/>
                <FIELD NAME="abusedescription" TYPE="text" LENGTH="big" NOTNULL="true" SEQUENCE="false" ENUM="false"
                       PREVIOUS="report_author" NEXT="created"/>
                <FIELD NAME="created" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" ENUM="false"
                       PREVIOUS="abusedescription"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id" NEXT="report_author"/>
                <KEY NAME="report_author" TYPE="foreign" FIELDS="report_author" REFTABLE="user" REFFIELDS="id" PREVIOUS="primary"/>
            </KEYS>
        </TABLE>
        <TABLE NAME="local_alexandria_backups" COMMENT="Pending courses list (backup)">
          <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" ENUM="false" NEXT="course_id"/>
          <FIELD NAME="course_id" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false" PREVIOUS="id"/>
          <KEYS>
            <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
          </KEYS>
          <INDEXES>
            <INDEX NAME="courseid" UNIQUE="true" FIELDS="course_id" COMMENT="Course index"/>
          </INDEXES>
        </TABLE>
    </TABLES>
</XMLDB>